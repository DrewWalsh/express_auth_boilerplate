{
	"env": {
		"es2020": true,
		"node": true
	},
	"plugins": ["jest", "prettier"],
	"extends": ["eslint:recommended", "plugin:jest/recommended", "plugin:prettier/recommended"],
	"parserOptions": {
		"parser": "babel-eslint",
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["warn", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["warn", "double"],
		"semi": ["warn", "always"],
		"no-unused-vars": ["warn"],
		"prettier/prettier": "error"
	}
}
